<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:id="@+id/browser_item_dirs_nav_layout"
    android:background="@color/bg_item_normal_color"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:layout_gravity="center"
    android:gravity="center">
    <TextView
        android:id="@+id/select_file_dir_tv"
        android:textColor="@color/browser_file_dir_normal_text_color"
        android:textSize="16sp"
    	android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
    	/>
    <ImageView 
        android:id="@+id/select_file_dir_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/browser_dirs_nav_right_arrows"
        android:layout_gravity="center"
        android:scaleType="centerInside"/>
</LinearLayout>
