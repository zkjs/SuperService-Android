<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zkjinshi.superservice.view.RoundProgressBar
            android:id="@+id/client_label_progress"
            android:layout_width="180dp"
            android:layout_height="180dp"
            progress:valueTextSize="28sp"
            android:layout_centerInParent="true"
            progress:roundColor="@color/round_color"
            progress:roundProgressColor="@color/round_progress_color"
            progress:valueTextColor="#666666"
            progress:circleStrokeWidth="12dp"/>

        <ImageView
            android:id="@+id/client_label_iv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_yuan_blue"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_gou_white"/>

    </RelativeLayout>

</RelativeLayout>