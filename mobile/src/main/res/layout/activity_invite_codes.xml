<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@color/TransparentGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:clickable="true"
                android:layout_width="56dp"
                android:layout_height="56dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ic_fanhui" />

            </RelativeLayout>

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/ll_invite_code"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/tv_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/ibtn_share_invite_code"
                    android:layout_marginLeft="20dp"
                    android:layout_width="15.5dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ic_bg_share"/>

                <ImageButton
                    android:id="@+id/ibtn_copy_invite_code"
                    android:layout_marginLeft="20dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_bg_copy"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_emp_name"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_above="@+id/ll_invite_code"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="@color/white"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_invite_codes"
            android:layout_width="match_parent"
            android:cacheColorHint="#000000"
            android:divider="@color/gray"
            android:dividerHeight="1.0dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:scrollingCache="false"
            android:visibility="visible"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </ScrollView>

</LinearLayout>