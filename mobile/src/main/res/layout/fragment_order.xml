<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">
    <include android:id="@+id/empty_layout"  layout="@layout/empty_layout"  android:visibility="gone" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="137dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#e3e3e3"
            android:dividerHeight="1.0dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:scrollingCache="false"
            android:visibility="visible" />

    </android.support.v4.widget.SwipeRefreshLayout>
    
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal"
        android:id="@+id/more_layout">
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_gravity="center"
                android:layout_width="0.5dp"
                android:background="@color/gray"
                android:layout_height="0dp"
                android:layout_weight="1.0">
            </View>
            <com.zkjinshi.superservice.view.CircleStatusView
                android:id="@+id/csv_more"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:layout_gravity="center"
                android:layout_width="0.5dp"
                android:background="@color/gray"
                android:layout_height="0dp"
                android:layout_weight="1.0">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/radius_frame_bg"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="更多"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_order_done"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:cacheColorHint="#000000"
                android:divider="#00000000"
                android:dividerHeight="10.0dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@mipmap/ic_clock"
                    />

                <TextView
                    android:id="@+id/tv_time_info"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/grayB8B8B8"
                    android:text="昨天"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
