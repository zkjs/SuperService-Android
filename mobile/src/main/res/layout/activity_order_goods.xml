<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light">
        <ImageButton
            android:id="@+id/back_btn_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_ibtn_back"
            android:scaleType="center"
            android:background="#00000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认房型"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title_layout"
        android:background="#f5f5f5">
        <!--房间数量-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:id="@+id/room_layout">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="房间数量"
                android:textColor="#808080"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/room_num"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_get_into_w"
                android:drawablePadding="5dp"
                android:text="2间"
                android:textColor="#808080"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View style="@style/GrayLineBorder"></View>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:divider="#f0edf0"
            android:dividerHeight="1dp"
            android:fadeScrollbars="true"
            android:id="@+id/goods_listview"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>
    <include layout="@layout/register_bottom" />
</RelativeLayout>
