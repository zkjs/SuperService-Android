<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_light_gray"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_contact_info"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_invite_code"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/TextColorBlack"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/rl_contact_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right|center"
                    android:textColor="@color/TextColorGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right|center"
                    android:textColor="@color/TextColorGray"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_contact_avatar"
            android:padding="8dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_contact_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center" />

            <com.zkjinshi.superservice.view.CircleImageView
                android:id="@+id/civ_contact_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/img_hotel_zhanwei"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/divider_line"></include>

</LinearLayout>