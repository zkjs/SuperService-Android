<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/graye8e8e8"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_title"> </include>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/theme_primary"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zkjinshi.superservice.view.CircleImageView
                    android:id="@+id/civ_member_avatar"
                    android:layout_centerVertical="true"
                    android:layout_width="72dp"
                    android:background="@drawable/img_hotel_zhanwei"
                    android:layout_height="72dp"/>

            </RelativeLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_member_name"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_height="0dp" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">

                        <TextView
                            android:id="@+id/tv_member_phone"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:paddingRight="10dp"
                            android:text="18695691235"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <ImageButton
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_member_phone"
                            android:id="@+id/ibtn_dianhua"
                            android:background="@drawable/bg_ic_dianhua"
                            android:layout_width="10.50dp"
                            android:layout_height="15dp" />

                    </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">

                    <TextView
                        android:paddingRight="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_member_level"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_member_level"
                        android:id="@+id/ibtn_duihua"
                        android:background="@drawable/bg_ic_duihua"
                        android:layout_width="15dp"
                        android:layout_height="15.75dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/account_type"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingRight="10dp"
                android:id="@+id/tv_member_type"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/visit_history_record"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_times_chinese"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="次"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_record_times"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/tv_times_chinese"
                android:inputType="number"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/prefrence_info"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <me.kaede.tagview.TagView
                android:id="@+id/tv_preference_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:lineMargin="5dp"
                app:tagMargin="3dp"
                app:textPaddingBottom="5dp"
                app:textPaddingLeft="20dp"
                app:textPaddingRight="20dp"
                app:textPaddingTop="5dp">
            </me.kaede.tagview.TagView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/privilege_info"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

                <me.kaede.tagview.TagView
                    android:padding="10dp"
                    android:id="@+id/tv_privilege_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:lineMargin="5dp"
                    app:tagMargin="3dp"
                    app:textPaddingBottom="3dp"
                    app:textPaddingLeft="10dp"
                    app:textPaddingRight="10dp"
                    app:textPaddingTop="3dp">
                </me.kaede.tagview.TagView>

        </LinearLayout>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 以下信息请编辑"
            android:textSize="16sp"
            android:textColor="@color/blue03a9f4" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/exclusive_customer_service"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingRight="10dp"
                android:id="@+id/tv_exclusive_server"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="@string/tag"
                android:textColor="@color/gray525252"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <me.kaede.tagview.TagView
                android:id="@+id/tv_client_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:lineMargin="5dp"
                app:tagMargin="3dp"
                app:textPaddingBottom="3dp"
                app:textPaddingLeft="10dp"
                app:textPaddingRight="10dp"
                app:textPaddingTop="3dp">
            </me.kaede.tagview.TagView>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_remark"
                android:layout_height="72dp"
                android:layout_width="match_parent"
                android:hint="@string/remark"
                android:textColorHint="@color/gray525252"
                android:padding="5dp"
                android:gravity="left|top"
                style="@style/inputStyle"
                android:inputType="text"
                android:maxLines="4" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>