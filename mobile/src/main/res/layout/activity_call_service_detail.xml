<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <include layout="@layout/title_toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_photo_sdv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    fresco:actualImageScaleType="centerInside"
                    fresco:roundAsCircle="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    fresco:roundedCornerRadius="0dp"
                    fresco:placeholderImage="@android:color/transparent"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:failureImage="@android:color/transparent"
                    fresco:failureImageScaleType="fitCenter"/>

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_photo_sdv"
                    android:layout_alignTop="@id/user_photo_sdv"
                    android:textSize="14sp"
                    android:textColor="#101010"
                    android:text="@null"/>

                <TextView
                    android:id="@+id/service_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_photo_sdv"
                    android:layout_alignBottom="@id/user_photo_sdv"
                    android:textSize="14sp"
                    android:textColor="#101010"
                    android:text="@null"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"/>

            <ListView
                android:id="@+id/list_view_service_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#000000"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>