<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.zkjinshi.superservice.view.CircleImageView
        android:id="@+id/hotel_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"></com.zkjinshi.superservice.view.CircleImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hotel_avatar"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <include layout="@layout/verify_phone" />
    </LinearLayout>

    <TextView
        android:id="@+id/shop_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="我是商家"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>
