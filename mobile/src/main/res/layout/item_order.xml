<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="142dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <View
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:background="@color/gray"
            android:layout_height="match_parent">
        </View>
        <com.zkjinshi.superservice.view.zoomview.CircleStatusView
            android:id="@+id/civ_left_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
           >
        </com.zkjinshi.superservice.view.zoomview.CircleStatusView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/radius_frame_bg"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.zkjinshi.superservice.view.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:background="@drawable/img_hotel_zhanwei"
                android:id="@+id/civ_avatar">
            </com.zkjinshi.superservice.view.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#949494"
                android:textSize="14sp"
                android:text="VIP 朱小姐已确认订单"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#949494"
                android:textSize="14sp"
                android:text="豪华大床房|2晚|10/03-10/05"
                android:id="@+id/tv_order" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="1068房|￥200.0"
                android:id="@+id/tv_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/skyblue"
                android:textSize="14sp"
                android:text="已确认/未支付"
                android:id="@+id/tv_pay_status" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_clock"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/ic_clock"
                />

            <TextView
                android:id="@+id/tv_time_info"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/grayB8B8B8"
                android:text="昨天"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/tel_btn"
                    android:id="@+id/iv_tel" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/chat_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/iv_chat" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/share_btn"
                    android:id="@+id/iv_share" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
