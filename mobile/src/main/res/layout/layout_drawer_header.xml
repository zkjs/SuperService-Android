<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/avatar_rlt"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/avatar_iv"
            android:src="@drawable/img_morentu"
            fresco:actualImageScaleType="centerCrop"
            fresco:backgroundImage="@drawable/img_morentu"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#48000000"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_add_grey600_24dp"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/edit_avatar_ibtn" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#00000000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:text="xxx"
                    style="@style/shadowText"
                    android:textStyle="bold"
                    android:id="@+id/username_tv" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cbx_online"
                    android:button="@null"
                    android:layout_marginLeft="10dp"
                    android:checked="false"
                    android:id="@+id/online_cbx"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                style="@style/shadowText"
                android:text="xxxxxxxxxxxxx酒店"
                android:id="@+id/shop_name_tv"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            style="@style/leftMenuText"
            android:text="团队联系人"
            android:id="@+id/team_tv" />

        <TextView
            style="@style/leftMenuText"
            android:text="我的客人"
            android:visibility="gone"
            android:id="@+id/client_tv" />

        <TextView
            style="@style/leftMenuText"
            android:text="@string/invite_code"
            android:visibility="gone"
            android:id="@+id/tv_invite_code" />

        <TextView
            style="@style/leftMenuText"
            android:text="收款台"
            android:visibility="gone"
            android:id="@+id/amount_tv" />

        <TextView
            style="@style/leftMenuText"
            android:text="设置"
            android:id="@+id/setting_tv" />

        <TextView
            style="@style/leftMenuText"
            android:text="退出"
            android:id="@+id/exit_tv" />

    </LinearLayout>

</LinearLayout>
