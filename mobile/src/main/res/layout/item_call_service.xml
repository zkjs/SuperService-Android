<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/call_service_time_axis_cut_line_top"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@color/divider_line_color"/>

        <com.zkjinshi.superservice.view.CircleImageView
            android:id="@+id/call_service_status_civ"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_blue" />

        <View
            android:id="@+id/call_service_time_axis_cut_line_bottom"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@color/divider_line_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_service_content_layout"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:background="@drawable/bg_radius_white_light_gray"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            layout="@layout/layout_call_service_content"/>

    </LinearLayout>

</LinearLayout>