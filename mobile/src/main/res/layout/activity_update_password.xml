<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light">

        <ImageButton
            android:id="@+id/back_btn"
            style="@style/backBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置密码"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="商家账号：xxxx"
                android:textColor="#888888"/>



            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/psw_et1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="#101010"
                    android:hint="请输入新密码"
                    android:textColorHint="#d1d1d1"
                    android:inputType="textPassword"/>
                <LinearLayout
                    android:id="@+id/clear_llt1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        fresco:placeholderImage="@mipmap/ic_cuowu"
                        fresco:placeholderImageScaleType="focusCrop"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/psw_et2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="#101010"
                    android:hint="请再次输入"
                    android:textColorHint="#d1d1d1"
                    android:inputType="textPassword"/>
                <LinearLayout
                    android:id="@+id/clear_llt2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        fresco:placeholderImage="@mipmap/ic_cuowu"
                        fresco:placeholderImageScaleType="focusCrop"/>
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:id="@+id/keep_pwd_cb"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/checkbox_keep_pwd_selector"
                android:button="@null"
                android:background="@null"
                android:text="显示密码"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:textColor="#888888"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/ok_btn"
                android:layout_marginTop="20dp"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_blue_selector"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="16sp"
                android:text="确认"
                android:textColor="#ffffff"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
